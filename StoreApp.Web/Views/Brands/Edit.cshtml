@model Brand

@{
    ViewData["Title"] = "Marka Düzenle";
}

@section Navbar {
    @await Html.PartialAsync("../Shared/Sections/Navbar/_Navbar.cshtml")
}

@section VerticalMenu {
    @await Html.PartialAsync("../Shared/Sections/Menu/_VerticalMenu.cshtml")
}

<h1 class="h4 mt-3">Marka Düzenle</h1>
<hr />

<form asp-controller="Brands" asp-action="Edit" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="SubCategories" class="form-label">Kategoriler</label>
        <select class="form-select" multiple="multiple" id="SubCategories" name="SubCategories" asp-items="ViewBag.SubCategories">
        </select>
    </div>

    <input type="submit" class="btn btn-primary" value="Kaydet" />
    <a class="btn btn-danger" asp-controller="Brands" asp-action="Index">İptal</a>
</form>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnHome").css("background-color", "#fff");
            $("#btnProducts").css("background-color", "#fff");
            $("#btnBrands").css("background-color", "#788393");
            $("#btnBrands").css("color", "#fff");
            $("#btnCities").css("background-color", "#fff");
            $("#btnCategories").css("background-color", "#fff");
            $("#btnUsers").css("background-color", "#fff");
            $("#btnRoles").css("background-color", "#fff");
        });
    </script>
}