@section Header{
    @await Html.PartialAsync("_Header", null, new ViewDataDictionary(ViewData) { { "Authenticated", ViewBag.IsAuthenticated }, { "Admin", ViewBag.IsAdmin }, { "User", ViewBag.UserId }, { "Language", ViewBag.Lang } })
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-header">Filtrele</div>

            <div class="card-body">
                @* <form id="frmFilter" asp-controller="Home" asp-action="Index" method="post"> *@
                    <div class="card-title">Marka</div>
                    <hr />
                    <div class="card-text">
                        @if (ViewBag.Brands != null)
                        {
                            @foreach (Brand brand in ViewBag.Brands)
                            {
                                <div class="mb-3">
                                    @if (ViewBag.SelectedBrands != null && ViewBag.SelectedBrands.Count > 0)
                                    {
                                        bool selectedBrand = false;

                                        @foreach (int selBrandId in ViewBag.SelectedBrands)
                                        {
                                            if (brand.Id == selBrandId)
                                            {
                                                selectedBrand = true;
                                            }
                                        }

                                        if (selectedBrand)
                                        {
                                            <input type="checkbox" checked id="brand_@brand.Id" name="brands" value="@brand.Id" class="form-check-input" />
                                        }

                                        else
                                        {
                                            <input type="checkbox" id="brand_@brand.Id" name="brands" value="@brand.Id" class="form-check-input" />
                                        }
                                    }

                                    else
                                    {
                                        <input type="checkbox" id="brand_@brand.Id" name="brands" value="@brand.Id" class="form-check-input" />
                                    }

                                    <label for="brand_@brand.Id" class="form-check-label" id="lblBrand_@brand.Id">@brand.Name</label>
                                </div>
                            }
                        }

                        else
                        {
                            @foreach (BrandSubCategory brandSubCategory in ViewBag.BrandSubCategories)
                            {
                                <div class="mb-3">
                                    @if (ViewBag.SelectedBrands != null && ViewBag.SelectedBrands.Count > 0)
                                    {
                                        bool selectedBrand = false;

                                        @foreach (int selBrandId in ViewBag.SelectedBrands)
                                        {
                                            if(brandSubCategory.BrandId == selBrandId)
                                            {
                                                selectedBrand = true;
                                            }
                                        }

                                        if (selectedBrand)
                                        {
                                            <input type="checkbox" checked id="brand_@brandSubCategory.BrandId" name="brands" value="@brandSubCategory.BrandId" class="form-check-input" />
                                        }

                                        else
                                        {
                                            <input type="checkbox" id="brand_@brandSubCategory.BrandId" name="brands" value="@brandSubCategory.BrandId" class="form-check-input" />
                                        }
                                    }

                                    else
                                    {
                                        <input type="checkbox" id="brand_@brandSubCategory.BrandId" name="brands" value="@brandSubCategory.BrandId" class="form-check-input" />
                                    }

                                    <label for="brand_@brandSubCategory.BrandId" class="form-check-label" id="lblBrand_@brandSubCategory.BrandId">@brandSubCategory.Brand.Name</label>
                                </div>
                            }
                        }
                    </div>

                    <div class="card-title">Fiyat Aralığı</div>
                    <hr />
                    <div class="card-text">
                        <div class="mb-3">
                            <label for="minPrice" class="form-label" id="lblMinPrice">En Düşük Fiyat</label>
                            <input type="number" id="minPrice" name="minPrice" value="@ViewBag.MinPrice" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="maxPrice" class="form-label" id="lblMaxPrice">En Yüksek Fiyat</label>
                            <input type="number" id="maxPrice" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" />
                        </div>
                    </div>

                    <input type="hidden" id="url" name="url" value="@ViewBag.Url" />
                    <input type="hidden" id="q" name="q" value="@ViewBag.qParam" />
                    <input type="submit" id="btnFilter" class="btn w-100 mainPageButtons" value="Filtrele" />
                @* </form> *@
            </div>
        </div>
    </div>

    <div class="col-9">
        <h1 class="h4" id="products-title">@(ViewBag.Url != null ? ViewBag.SubCategoryName : (ViewBag.qParam != null ? "'" + ViewBag.qParam + "'" + " ile ilgili " + ViewBag.ProductCount + " ürün bulduk" : "Ürünler"))</h1>
        <hr />
        @if(Model.Count > 0)
        {
            <div class="row">
                @foreach (Product product in Model)
                {
                    <div class="mb-3 col-3">
                        <div class="card prdCards" data-cardid="@product.Id" data-url="@product.Url">
                            <div class="card-img-top">
                                <div id="carouselIndicatorsProducts_@product.Id" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators w-100">
                                        @{
                                            List<ProductImage>? productImages = await DataControl.GetCardProductImages(product.Id);

                                            if (productImages.Count > 1)
                                            {
                                                foreach (ProductImage image in productImages)
                                                {
                                                                            @if (image == productImages.First())
                                                    {
                                                                                <button type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide-to="@(image.Id - 1)" class="active rounded-circle" aria-current="true" aria-label="Slide @image.Id" style="background-color: orange; width: 10px; height: 10px;"></button>
                                                    }

                                                    else
                                                    {
                                                                                <button type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide-to="@(image.Id - 1)" class="rounded-circle" aria-label="Slide @image.Id" style="background-color: orange; width: 10px; height: 10px;"></button>
                                                    }
                                                }
                                            }
                                        }
                                    </div>
                                    <div class="carousel-inner">
                                        @{
                                            foreach (ProductImage image in productImages)
                                            {
                                                                        @if (image == productImages.First())
                                                {
                                                                            <div class="carousel-item active">
                                                                                <img src="@image.Url" class="d-block w-100" alt="Slider @image.Id">
                                                                            </div>
                                                }

                                                else
                                                {
                                                                            <div class="carousel-item">
                                                                                <img src="@image.Url" class="d-block w-100" alt="Slider @image.Id">
                                                                            </div>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (productImages.Count > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    }
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="card-title txtBrand_@product.BrandId" style="color:#FF6000">@product.Brand.Name</div>
                                <div class="card-title" id="product_@product.Id">@product.Name</div>
                                <div class="mb-3">
                                    <div class="card-text">@product.Price.ToString() TL</div>
                                </div>
                                <input type="submit" id="btnBasket_@product.Id" data-productid="@product.Id" style="display:none;" class="btn w-100 addBasket" value="Sepete Ekle" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        else
        {
            <table class="table table-bordered">
                <tr>
                    <td>Listelenecek bir ürün bulunamadı.</td>
                </tr>
            </table>
        }

        <nav>
            <ul class="pagination justify-content-center">
                @{
                    int PageCount = 0;
                    string brands = ViewBag.SelBrandsStr;
                    float minPrice = ViewBag.MinPrice;
                    float maxPrice = ViewBag.MaxPrice;
                    List<Product> products;
                    List<int> brandIds = new List<int>();

                    if (!string.IsNullOrEmpty(brands))
                    {
                        foreach (string brandId in brands.Split(","))
                        {
                            brandIds.Add(int.Parse(brandId));
                        }
                    }

                    if (string.IsNullOrEmpty(ViewBag.Url))
                    {
                        if (ViewBag.qParam != null)
                        {
                            products = await DataControl.GetProductsBySearchText(ViewBag.qParam);

                            if (string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                            {
                                products = products.Where(p => p.Price <= maxPrice).ToList();
                            }

                            else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                            {
                                products = products.Where(p => p.Price >= minPrice).ToList();
                            }

                            else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice > 0)
                            {
                                products = products.Where(p => p.Price >= minPrice && p.Price <= maxPrice).ToList();
                            }

                            else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice == 0)
                            {
                                products = products.Where(p => brandIds.Contains(p.BrandId)).ToList();
                            }

                            else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                            {
                                products = products.Where(p => brandIds.Contains(p.BrandId) && p.Price <= maxPrice).ToList();
                            }

                            else if (!string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                            {
                                products = products.Where(p => brandIds.Contains(p.BrandId) && p.Price >= minPrice).ToList();
                            }

                            else if (!string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice > 0)
                            {
                                products = products.Where(p => brandIds.Contains(p.BrandId) && p.Price >= minPrice && p.Price <= maxPrice).ToList();
                            }

                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProducts();
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsMaxPrice(maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsMinPrice(minPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsMinMaxPrice(minPrice, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsBrands(brands);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsBrandsMaxPrice(brands, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsBrandsMinPrice(brands, minPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else
                        {
                            products = await DataControl.GetProductsBrandsMinMaxPrice(brands, minPrice, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }
                    }

                    else
                    {
                        string url = ViewBag.Url;

                        if(string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProducts(url);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsUrlMaxPrice(url, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsUrlMinPrice(url, minPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsUrlMinMaxPrice(url, minPrice, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsUrlBrands(url, brands);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice == 0 && maxPrice > 0)
                        {
                            products = await DataControl.GetProductsUrlBrandsMaxPrice(url, brands, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else if (!string.IsNullOrEmpty(brands) && minPrice > 0 && maxPrice == 0)
                        {
                            products = await DataControl.GetProductsUrlBrandsMinPrice(url, brands, minPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }

                        else
                        {
                            products = await DataControl.GetProductsUrlBrandsMinMaxPrice(url, brands, minPrice, maxPrice);
                            PageCount = Convert.ToInt32(Math.Ceiling((float)products.Count / 8));
                        }
                    }

                    <input type="hidden" id="PageCount" value="@PageCount" />

                    if(PageCount > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" id="btn-previous" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    for (int i = 1; i <= PageCount; i++)
                    {
                        if (i <= 3)
                        {
                            <li class="page-item @(i == 1 ? "active" : "")" id="page-item-@i"><a class="page-link" data-pageindex="@i">@i</a></li>
                        }

                        else
                        {
                            <li class="page-item visually-hidden" id="page-item-@i"><a class="page-link" data-pageindex="@i">@i</a></li>
                        }
                    }

                    if (PageCount > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" id="btn-next" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            let searchParams = new URLSearchParams(window.location.search);
            let qParam = searchParams.get('q');
            let urlParam = searchParams.get('url');
            let brands = searchParams.get('brands');
            let minPrice = searchParams.get('minPrice');
            let maxPrice = searchParams.get('maxPrice');
            $("#search-text").val(qParam);
            let pageIndex = searchParams.get('PageIndex');
            let lang = searchParams.get('lang');
            
            if (lang == "en") {
                $("#dropdownMenuButton > .flag-icon").removeClass("flag-icon-tr");
                $("#dropdownMenuButton > .flag-icon").addClass("flag-icon-en");
                $(".lang-menu > .dropdown-item > img").attr("src", "https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.4.6/flags/4x3/tr.svg");
                $(".lang-menu > .dropdown-item").data("lang", "tr");
                $("#search-text").attr("placeholder", "Search product, category or brand...");
                $("#search-empty").html("You should write <strong>least 2 characters</strong> to start searching.");
                $("#search-button").text("Search");
                $("#adminPanel").text("Admin Panel");
                $("#login").text("Login");
                $("#register").text("Register");
                $("#greeting").text("Hello,");
                $(".card > .card-header").text("Filter");
                $($(".card-body > .card-title")[0]).text("Brand");
                $($(".card-body > .card-title")[1]).text("Price Range");
                $("#btnFilter").val("Filter");
                $("#lblMinPrice").text("Min Price");
                $("#lblMaxPrice").text("Max Price");
                $("#products-title").text($("#products-title").text().replace("Ürünler", "Products"));
                $(".table > tbody > tr > td").text($(".table > tbody > tr > td").text().replace("Listelenecek bir ürün bulunamadı.", "There are no records to list."));

                let qParamRaw = '@Html.Raw(Json.Serialize(ViewBag.qParam))';
                let productCount = '@Html.Raw(Json.Serialize(ViewBag.ProductCount))';
                let title = '@Html.Raw(Json.Serialize(ViewData["Title"]))';
                var sentence1 = qParamRaw.replace('"', "'") + " ile ilgili " + productCount + " ürün bulduk";
                var sentence2 = "We found " + productCount + " product" + " about " + qParamRaw.replace('"', "'");

                $("#products-title").text($("#products-title").text().replace(sentence1.replace('"', "'"), sentence2.replace('"', "'")));
                $("#page-title").text("Main Page");

                if (urlParam != null) {
                    $.ajax({
                        type: 'GET',
                        url: "http://localhost:5292/api/StoreApp/GetSubCategoryByUrl/" + urlParam,
                        dataType: 'Json',
                        success: function (subcategory) {
                            if (subcategory != null) {
                                let $target = $("#products-title");
                                $target.text(subcategory.ml2Name == null ? subcategory.name : subcategory.ml2Name);
                            }
                        }
                    });
                }

                $(".addBasket").val("Add Basket");

                $.ajax({
                    type: 'GET',
                    url: "http://localhost:5292/api/StoreApp/GetCategories",
                    dataType: 'Json',
                    success: function (categories) {
                        if (categories.length > 0) {
                            for (let i = 0; i < categories.length; i++) {
                                let $target = $("#menuButton_" + categories[i].id);
                                $target.text(categories[i].ml2Name == null ? categories[i].name : categories[i].ml2Name);
                            }
                        }
                    }
                });

                $.ajax({
                    type: 'GET',
                    url: "http://localhost:5292/api/StoreApp/GetSubCategories",
                    dataType: 'Json',
                    success: function (subcategories) {
                        if (subcategories.length > 0) {
                            for (let i = 0; i < subcategories.length; i++) {
                                let $target = $("#subMenuButton_" + subcategories[i].id);
                                $target.text(subcategories[i].ml2Name == null ? subcategories[i].name : subcategories[i].ml2Name);
                            }
                        }
                    }
                });

                $.ajax({
                    type: 'GET',
                    url: "http://localhost:5292/api/StoreApp/GetBrands",
                    dataType: 'Json',
                    success: function (brands) {
                        if (brands.length > 0) {
                            for (let i = 0; i < brands.length; i++) {
                                let $target = $("#lblBrand_" + brands[i].id);
                                $target.text(brands[i].ml2Name == null ? brands[i].name : brands[i].ml2Name);
                            }
                        }
                    }
                });

                $.ajax({
                    type: 'GET',
                    url: "http://localhost:5292/api/StoreApp/GetProducts",
                    dataType: 'Json',
                    success: function (products) {
                        if (products.length > 0) {
                            for (let i = 0; i < products.length; i++) {
                                let $targetProduct = $("#product_" + products[i].id);
                                let $targetBrand = $(".txtBrand_" + products[i].brand.id);
                                $targetProduct.text(products[i].ml2Name == null ? products[i].name : products[i].ml2Name);
                                $targetBrand.text(products[i].brand.ml2Name == null ? products[i].brand.name : products[i].brand.ml2Name);
                            }
                        }
                    }
                });
            }

            else {
                $("#dropdownMenuButton > .flag-icon").removeClass("flag-icon-en");
                $("#dropdownMenuButton > .flag-icon").addClass("flag-icon-tr");
                $(".lang-menu > .dropdown-item > img").attr("src", "https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.4.6/flags/4x3/gb.svg");
                $(".lang-menu > .dropdown-item").data("lang", "en");
                $("#search-text").attr("placeholder", "Ürün, kategori veya marka ara...");
                $("#search-empty").html("Aramaya başlamak için <strong>en az 2 karakter</strong> yazmalısınız.");
                $("#search-button").text("ARA");
                $("#adminPanel").text("Yönetici Paneli");
                $("#login").text("Giriş Yap");
                $("#register").text("Kayıt Ol");
                $("#greeting").text("Merhaba,");
