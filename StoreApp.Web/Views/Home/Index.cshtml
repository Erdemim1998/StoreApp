@model List<Product>

@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (ViewBag.Url == null)
{
    <div class="mb-3">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="6" aria-label="Slide 7"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="7" aria-label="Slide 8"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="8" aria-label="Slide 9"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="9" aria-label="Slide 10"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/Slider 1.png" class="d-block w-100" alt="Slider 1">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 2.png" class="d-block w-100" alt="Slider 2">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 3.png" class="d-block w-100" alt="Slider 3">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 4.png" class="d-block w-100" alt="Slider 4">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 5.png" class="d-block w-100" alt="Slider 5">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 6.png" class="d-block w-100" alt="Slider 6">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 7.png" class="d-block w-100" alt="Slider 7">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 8.png" class="d-block w-100" alt="Slider 8">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 9.png" class="d-block w-100" alt="Slider 9">
                </div>
                <div class="carousel-item">
                    <img src="/img/Slider 10.png" class="d-block w-100" alt="Slider 10">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}

@section Header{
    @await Html.PartialAsync("_Header")
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-header">Filtrele</div>

            <div class="card-body">
                <form id="frmFilter" asp-controller="Home" asp-action="Index" method="post">
                    <div class="card-title">Marka</div>
                    <hr />
                    <div class="card-text">
                        @if (ViewBag.Brands != null)
                        {
                            @foreach (Brand brand in ViewBag.Brands)
                            {
                                <div class="mb-3">
                                    @if (ViewBag.SelectedBrands != null && ViewBag.SelectedBrands.Length > 0)
                                    {
                                        <input type="checkbox" id="brand @brand.Id" name="brands" value="@brand.Id" class="form-check-input" />
                                    }

                                    else
                                    {
                                        <input type="checkbox" id="brand @brand.Id" name="brands" value="@brand.Id" class="form-check-input" />
                                    }

                                    <label for="brand @brand.Id" class="form-check-label">@brand.Name</label>
                                </div>
                            }
                        }

                        else
                        {
                            @foreach (BrandSubCategory brandSubCategory in ViewBag.BrandSubCategories)
                            {
                                <div class="mb-3">
                                    @if (ViewBag.SelectedBrands != null && ViewBag.SelectedBrands.Length > 0)
                                    {
                                        <input type="checkbox" id="brandSubCategory @brandSubCategory.BrandId" name="brands" value="@brandSubCategory.BrandId" class="form-check-input" />
                                    }

                                    else
                                    {
                                        <input type="checkbox" id="brandSubCategory @brandSubCategory.BrandId" name="brands" value="@brandSubCategory.BrandId" class="form-check-input" />
                                    }

                                    <label for="brandSubCategory @brandSubCategory.BrandId" class="form-check-label">@brandSubCategory.Brand.Name</label>
                                </div>
                            }
                        }
                    </div>

                    <div class="card-title">Fiyat Aralığı</div>
                    <hr />
                    <div class="card-text">
                        <div class="mb-3">
                            <label for="minPrice" class="form-label">En Düşük Fiyat</label>
                            <input type="number" id="minPrice" name="minPrice" value="@ViewBag.MinPrice" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="maxPrice" class="form-label">En Yüksek Fiyat</label>
                            <input type="number" id="maxPrice" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" />
                        </div>
                    </div>

                    <input type="hidden" id="url" name="url" value="@ViewBag.Url" />
                    <input type="submit" class="btn w-100 mainPageButtons" value="Filtrele" />
                </form>
            </div>
        </div>
    </div>

    <div class="col-9">
        <h1 class="h4">@(ViewBag.Url != null ? ViewBag.SubCategoryName : "Ürünler")</h1>
        <hr />
        @if(Model.Count > 0)
        {
            <div class="row">
                @foreach (Product product in Model)
                {
                    <div class="mb-3 col-3">
                        <div class="card prdCards" data-cardid="@product.Id" data-url="@product.Url">
                            <div class="card-img-top">
                                <div id="carouselIndicatorsProducts_@product.Id" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators w-100">
                                        @{
                                            List<ProductImage>? productImages = await DataControl.GetCardProductImages(product.Id);

                                            if (productImages.Count > 1)
                                            {
                                                foreach (ProductImage image in productImages)
                                                {
                                                        @if (image == productImages.First())
                                                    {
                                                            <button type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide-to="@(image.Id - 1)" class="active rounded-circle" aria-current="true" aria-label="Slide @image.Id" style="background-color: orange; width: 10px; height: 10px;"></button>
                                                    }

                                                    else
                                                    {
                                                            <button type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide-to="@(image.Id - 1)" class="rounded-circle" aria-label="Slide @image.Id" style="background-color: orange; width: 10px; height: 10px;"></button>
                                                    }
                                                }
                                            }
                                        }
                                    </div>
                                    <div class="carousel-inner">
                                        @{
                                            foreach (ProductImage image in productImages)
                                            {
                                                    @if (image == productImages.First())
                                                {
                                                        <div class="carousel-item active">
                                                            <img src="@image.Url" class="d-block w-100" alt="Slider @image.Id">
                                                        </div>
                                                }

                                                else
                                                {
                                                        <div class="carousel-item">
                                                            <img src="@image.Url" class="d-block w-100" alt="Slider @image.Id">
                                                        </div>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (productImages.Count > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicatorsProducts_@product.Id" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    }
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="card-title" style="color:#FF6000">@product.Brand.Name</div>
                                <div class="card-title">@product.Name</div>
                                <div class="mb-3">
                                    <div class="card-text">@product.Price.ToString() TL</div>
                                </div>
                                <input type="submit" id="btnBasket_@product.Id" style="display:none;" class="btn w-100 mainPageButtons" value="Sepete Ekle" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        else
        {
            <table class="table table-bordered">
                <tr>
                    <td>Listelenecek bir ürün bulunamadı.</td>
                </tr>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).on("mouseenter", ".prdCards", function () {
            var cardID = $(this).data("cardid");
            $('#btnBasket_' + cardID).css('display', 'block');
        });

        $(document).on("mouseleave", ".prdCards", function () {
            var cardID = $(this).data("cardid");
            $('#btnBasket_' + cardID).css('display', 'none');
        });

        $(document).on("click", ".prdCards", function () {
            var url = $(this).data("url");
            window.location.href = "/Products/Detail?url=" + url;
        });

        $(document).on("focus", "#search-text", function () {
            $("#search-box").css('border', '2px solid #FF6000');
            $("#search-button").css('background-color', '#FF6000');
        });

        $(document).on("click", ".nav", function () {
            $("#search-box").css('border', '2px solid #919191');
            $("#search-button").css('background-color', '#919191');
        });

        $(document).on("click", ".layout-wrapper", function () {
            $("#search-box").css('border', '2px solid #919191');
            $("#search-button").css('background-color', '#919191');
        });

        $(document).on("click", ".navbar-brand", function () {
            $("#search-box").css('border', '2px solid #919191');
            $("#search-button").css('background-color', '#919191');
        });

        $(document).on("click", ".justify-content-end", function () {
            $("#search-box").css('border', '2px solid #919191');
            $("#search-button").css('background-color', '#919191');
        });
    </script>
}