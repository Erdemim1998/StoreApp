@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
}

@section Navbar {
    @await Html.PartialAsync("../Shared/Sections/Navbar/_Navbar.cshtml")
}

@section VerticalMenu {
    @await Html.PartialAsync("../Shared/Sections/Menu/_VerticalMenu.cshtml")
}

<h1 class="h4 mt-3">Roller</h1>
<hr />

<div class="mb-3 mt-3">
    <a class="btn btn-secondary" asp-controller="Roles" asp-action="Create">Rol Ekle</a>
</div>

@if (Model.Count > 0)
{
    <div class="w-100 overflow-scroll" style="height: 800px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol Adı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (AppRole role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id">Düzenle</a>
                            <a class="btn btn-danger" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>Herhangi bir kayıt bulunmamaktadır.</td>
            </tr>
        </tbody>
    </table>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnHome").css("background-color", "#fff");
            $("#btnProducts").css("background-color", "#fff");
            $("#btnBrands").css("background-color", "#fff");
            $("#btnCities").css("background-color", "#fff");
            $("#btnCategories").css("background-color", "#fff");
            $("#btnUsers").css("background-color", "#fff");
            $("#btnRoles").css("background-color", "#788393");
            $("#btnRoles").css("color", "#fff");
        });
    </script>
}